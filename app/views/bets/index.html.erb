<% content_for :title do %>
  Meus palpites

  <ul class="nav navbar-nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= @group.championship %>
        <small><%= @group %></small>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li>
          <% @groups.each do |group| %>
            <%= link_to bets_path(group_id: group) do %>
              <%= group.championship %>
              <small><%= group %></small>
            <% end %>
          <% end %>
        </li>
      </ul>
    </li>
  </ul>
<% end %>

<div class="col-xs-12 col-sm-9">
  <ul class="pager">
    <% if @week.previous? %>
      <li class="previous">
        <%= link_to '←', bets_path(week: @week.previous) %>
      </li>
    <% else %>
      <li class='previous disabled'>
        <a>←</a>
      </li>
    <% end %>
    <li class="week">
      Semana <%= @week.number %>:
      <%= @week.start.strftime("%d/%m") %> a <%= @week.finish.strftime("%d/%m") %>
    </li>
    <% if @week.next? %>
      <li class="next">
        <%= link_to '→', bets_path(week: @week.next) %>
      </li>
    <% else %>
      <li class="next disabled">
        <a>→</a>
      </li>
    <% end %>
  </ul>

  <div id="bets" class="list-group">
  </div>
</div>

<div class="col-xs-12 col-sm-3" role="navigation">
  <h4>Participantes</h4>

  <div class="list-group">
    <% @members.each do |member| %>
      <a href='#' class="list-group-item">
        <%= member %>
        <span class="badge">0</span>
      </a>
    <% end %>
  </div>
</div>

<script type="text/template" id="bet-template">
  <div class="col-md-1 col-xs-1 bet-col">
    <div class="text-center bg-success"><strong></strong></div>
    <div class="text-center"></div>
    <div class="text-center"><small class="text-muted"></small></div>
  </div>
  <div class="col-md-1 col-xs-1 text-center round">

  </div>
  <div class="row col-md-10 col-xs-10 bet-col teams">
    <div class="col-md-3 col-xs-3 text-right team-name"></div>
    <div class="col-md-1 col-xs-1 text-left"></div>
    <div class="col-md-1 col-xs-1 text-center goal"><%%- team_home_goals %></div>
    <div class="col-md-2 col-xs-2 text-center vs">vs</div>
    <div class="col-md-1 col-xs-1 text-center goal"><%%- team_away_goals %></div>
    <div class="col-md-1 col-xs-1 text-right"></div>
    <div[class="col-md-3 col-xs-3 team-name"></div>
  </div>
</script>
