  - for championship in @championships do
    tbody
      tr
        td
          = championship
        td.text-center
          = l championship.started_at, format: :short
        td.text-center
          = l championship.finished_at, format: :short
        td
          = link_to "Editar", edit_championship_path(championship)
          |&nbsp;
          = link_to "Excluir", championship, method: :delete, "data-confirm" => "Tem certeza que deseja excluir o campeonato?"
